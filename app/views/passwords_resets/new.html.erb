<h1>Reset your password</h1>

<%= form_with url: password_reset_path do |form| %>
    <div class="form-floating mb-3">
        <%= form.text_field :email, class: "form-control", placeholder: "example@email.com" %>
        <label for="floatingInput">Email</label>
    </div>
    <div>
        <%= form.submit "Reset your password", class: "btn btn-secondary", data: { turbo: false } %>
    </div>
<%end%>